@{
    ViewBag.Title = "cart";
}

<center >
    </br>

    <h1>List of Items</h1>

    <table>

        <tr>
            <td>ID</td>
            <td> Name</td>
            <td> image</td>
            <td>Color</td>
            <td>Company</td>
            <td>price</td>
            <td>Quantity</td>
            <td>Warranty</td>
        </tr>

        @foreach (var s in Model)
        {
            <tr>
                <td>@s.I_Id</td>
                <td>@s.iname</td>
                <td><img src="@s.image" alt="Image can not be diplayed"></td>
                <td>@s.icolor</td>
                <td>@s.comp_Id</td>
                <td>@s.iprice</td>
                <td>@s.quantity</td>
                <td>@s.warranty</td>

                <td>
                    <a href="/home/select/@s.I_Id">Select</a>
                </td>
            </tr>
        }
    </table>
    <form method="post" action="~/home/receipt">
        <input type="submit" value="Done" style="margin-left:400px;background-color:blue;color:white" /></br></br>
    </form>
</center>